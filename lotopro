import streamlit as st
import random

# CONFIGURA√á√ÉO DA P√ÅGINA
st.set_page_config(
    page_title="LotoPro - Gerador de N√∫meros",
    page_icon="üé≤",
    layout="centered"
)

st.title("üé≤ LotoPro ‚Äì Gerador de N√∫meros da Loteria")
st.write("Gere seus jogos de forma r√°pida, simples e organizada.")

st.divider()

# ESCOLHA DA LOTERIA
tipo = st.selectbox(
    "Escolha a loteria:",
    ["Mega-Sena", "Quina", "Lotof√°cil"]
)

# QUANTIDADE DE JOGOS
qtd = st.number_input(
    "Quantidade de jogos:",
    min_value=1,
    max_value=20,
    value=5
)

# FUN√á√ÉO DE GERA√á√ÉO
def gerar_jogo(tipo):
    if tipo == "Mega-Sena":
        return sorted(random.sample(range(1, 61), 6))
    elif tipo == "Quina":
        return sorted(random.sample(range(1, 81), 5))
    elif tipo == "Lotof√°cil":
        return sorted(random.sample(range(1, 26), 15))

# BOT√ÉO
if st.button("üéØ Gerar Jogos"):
    st.subheader("Seus jogos:")
    jogos_texto = ""

    for i in range(qtd):
        jogo = gerar_jogo(tipo)
        st.write(f"**Jogo {i+1}:** {jogo}")
        jogos_texto += f"Jogo {i+1}: {jogo}\n"

    # DOWNLOAD
    st.download_button(
        label="üì• Baixar jogos em TXT",
        data=jogos_texto,
        file_name="meus_jogos_loteria.txt",
        mime="text/plain"
    )

st.divider()

st.caption(
    "‚ö†Ô∏è Produto para entretenimento. "
    "Este aplicativo gera n√∫meros aleat√≥rios e n√£o garante pr√™mios."
)
